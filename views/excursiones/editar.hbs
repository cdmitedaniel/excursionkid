<script>
if(localStorage.getItem('usuario') == null || localStorage.getItem('usuario') == undefined){
    window.location = "/login";
    console.log("login")
}</script>
<div class="row justify-content-between bg-light modal-body" id="menu">
    <div><img src="../../images/Logo.png" width="250px"></div>
</div>
<a href="/excursiones">Ir lista excursiones</a>
<form class="form" action="/excursiones/{{excursion.id}}?_method=PUT" method="post">
  <div class="form-group">
    <label for="title">Titulo:</label>
    <input type="text" class="form-control" id="nombre" placeholder="Titulo" name="titulo" value="{{excursion.titulo}}">
  </div>
  <div class="form-group">
    <label for="title">Descripcion:</label>
    <input type="text" class="form-control" id="usuario" placeholder="Descripcion" name="descripcion" value="{{excursion.descripcion}}">
  </div>
  <div class="form-group">
    <label for="title">Creditos:</label>
    <input type="text" class="form-control" id="clave" placeholder="Creditos" name="creditos" value="{{excursion.creditos}}">
  </div>
  <div class="form-group">
    <label for="priority">Usuario:</label>
    <select class="form-control" id="rol" name="id_usuario">

    {{#select excursion.id_usuario}}
      {{#each usuarios}}
        <option value="{{id}}">{{nombre}}</option>
      {{/each}}
    {{/select}}
    </select>
  </div>
  <div class="form-group">
    <label for="title">Portada:</label>
    <input type="file" class="form-control" id="foto_perfil_editar">
  </div>
  <div class="form-group">
    <input type="input" class="form-control" id="img_foto_perfil_" name="portada" value="{{excursion.portada}}">
  </div>
  <div class="form-group">
    <img src="{{excursion.portada}}" alt="" id="img_foto_perfil" width="100" height="100">
  </div>
  <button type="submit" class="btn btn-default btn-success">
    Guardar cambios
  </button>
</form>

{{#each scripts}}
  <script src="{{script}}"></script>
{{/each}}