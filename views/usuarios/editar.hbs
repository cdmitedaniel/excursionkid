<form class="form" action="/usuarios/{{usuario.id}}?_method=PUT" method="post">
  <div class="form-group">
    <label for="title">Nombre:</label>
    <input type="text" class="form-control" id="nombre" placeholder="Nombre Completo" name="nombre" value="{{usuario.nombre}}">
  </div>
  <div class="form-group">
    <label for="title">Usuario:</label>
    <input type="text" class="form-control" id="usuario" value="{{usuario.usuario}}" placeholder="Usuario" name="usuario">
  </div>
  <div class="form-group">
    <label for="title">Clave:</label>
    <input type="password" class="form-control" value="{{usuario.clave}}" id="clave" placeholder="Usuario" name="clave">
  </div>
  <div class="form-group">
    <label for="priority">Rol</label>
    <select class="form-control" id="rol" name="rol">
      {{#select usuario.rol}}<!--rol: 'A' , 'N'-->
      <option value="A">Rol Administrador</option>
      <option value="N">Rol Ni√±o</option>
      {{/select}}
    </select>
  </div>
  <div class="form-group">
    <label for="title">Foto:</label>
    <input type="file" class="form-control" id="foto_perfil_editar">
  </div>
  <div class="form-group">
    <img src="{{usuario.foto_perfil}}" id="img_foto_perfil" width="100" height="100">
    <input type="input" class="form-control hidden" id="img_foto_perfil_" name="input_foto_perfil" value="{{usuario.foto_perfil}}">
  </div>
  <!--<div class="form-group">
    <img src="" alt="" id="foto_perfil_">
  </div>-->
  <button type="submit" class="btn btn-default btn-success">
    Actualizar Datos
  </button>
</form>

{{#each scripts}}
  <script src="{{script}}"></script>
{{/each}}