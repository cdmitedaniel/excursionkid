<form class="form" action="/usuarios" method="post">
  <div class="form-group">
    <label for="title">Nombre:</label>
    <input type="text" class="form-control" id="nombre" placeholder="Nombre Completo" name="nombre"><!--req.body.name-->
  </div>
  <div class="form-group">
    <label for="title">Usuario:</label>
    <input type="text" class="form-control" id="usuario" placeholder="Usuario" name="usuario"><!--req.body.usuario-->
  </div>
  <div class="form-group">
    <label for="title">Clave:</label>
    <input type="password" class="form-control" id="clave" placeholder="Usuario" name="clave">
  </div>
  <div class="form-group">
    <label for="priority">Rol</label>
    <select class="form-control" id="rol" name="rol"><!--req.body.rol-->
      <option value="A">Rol Administrador</option>
      <option value="N">Rol Ni√±o</option>
    </select>
  </div>
  <div class="form-group">
    <label for="title">Foto:</label>
    <input type="file" class="form-control" id="foto_perfil_editar">
  </div>
  <div class="form-group">
    <input type="input" class="form-control" id="img_foto_perfil_" name="input_foto_perfil">
  </div>
  <div class="form-group">
    <img src="" alt="" id="img_foto_perfil" width="100" height="100">
  </div>
  <button type="submit" class="btn btn-default btn-success">
    Crear
  </button>
</form>

