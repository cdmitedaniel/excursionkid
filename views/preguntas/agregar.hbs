<form class="form" action="/preguntas" method="post" encType="multipart/form-data">
  <div class="form-group">
    <label for="title">Pregunta:</label>
    <input type="text" class="form-control" id="nombre" placeholder="Pregunta" name="pregunta">
  </div>

  <div class="form-group">
    <label for="priority">Capitulo:</label>
    <select class="form-control" id="rol" name="id_capitulo">
    {{#each capitulos}}
    <option value="{{id}}">{{titulo}}</option>
    {{/each}}
    </select>
  </div>

  <div class="form-group">
  <label for="title">Respuesta:</label>
    <select class="form-control" id="respuesta" name="respuesta">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
    </select>

  </div>
  
  <div class="form-group">
    <label for="imagen_opcion_1">Imagen opcion1:</label>
    <img src="" alt="" id="pregunta_1_img" width="100" height="100">
    <input type="file" class="form-control" id="file_pregunta_1_img" name="pregunta_1_img">
    <input class="form-control hidden" type="text" id="pregunta_1_img_" name="pregunta_1_img_">
  </div>

  <div class="form-group">
    <label for="imagen_opcion_2">Imagen opcion2:</label>
    <img src="" alt="" id="pregunta_2_img" width="100" height="100">
    <input type="file" class="form-control" id="file_pregunta_2_img" name="pregunta_2_img">
    <input class="form-control hidden" type="text" id="pregunta_2_img_" name="pregunta_2_img_">
  </div>

  <div class="form-group">
    <label for="imagen_opcion_3">Imagen opcion3:</label>
    <img src="" alt="" id="pregunta_3_img" width="100" height="100">
    <input type="file" class="form-control" id="file_pregunta_3_img" name="pregunta_3_img">
    <input class="form-control hidden" type="text" id="pregunta_3_img_" name="pregunta_3_img_">
  </div>

  <div class="form-group">
    <label for="imagen_opcion_4">Imagen opcion4:</label>
    <img src="" alt="" id="pregunta_4_img" width="100" height="100">
    <input type="file" class="form-control" id="file_pregunta_4_img" name="pregunta_4_img">
    <input class="form-control hidden" type="text" id="pregunta_4_img_" name="pregunta_4_img_">
  </div>

  <div class="form-group">
    <label for="pregunta_audio">Audio pregunta:</label>
    <input type="file" name="pregunta_audio" id="archivo" accept="audio/mp3">
  </div>



  <button type="submit" class="btn btn-default btn-success">
    Crear
  </button>
</form>

{{#each scripts}}
  <script src="{{script}}"></script>
{{/each}}